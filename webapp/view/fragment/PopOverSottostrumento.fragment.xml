<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover title="{modelPosFin>/Sottostrumento}" class="sapUiContentPadding" placement="Bottom" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
		<content>
			<l:VerticalLayout class="sapUiSmallMargin">
				<ObjectStatus title="{i18n>TipoSottoStr}" text="{modelPosFin>/infoSottoStrumento/DescrTipoSottostrumento}" class="textBold"/>
				<ObjectStatus title="{i18n>Sottostrumento}" text="{modelPosFin>/infoSottoStrumento/NumeroSottostrumento}" class="textBold"/>
				<ObjectStatus title="{i18n>AnnoFaseSottoStr}" text="{modelPosFin>/infoSottoStrumento/AnnoSottostrumento}" class="textBold"/>
				<ObjectStatus title="{i18n>DescrSottostrumento}" text="{modelPosFin>/infoSottoStrumento/DescrEstesa}" class="textBold"/>
				<ObjectStatus title="{i18n>Stato}" text="Aperto" class="textBold"/>
				<ObjectStatus title="{i18n>Visibilita}" text="Bilancio" class="textBold"/>
				<ObjectStatus title="{i18n>EspContabile}" text="{path: 'modelPosFin>/infoSottoStrumento/StatEsposizione', formatter: '.__onGetTipoEsposizione'}" class="textBold"/>
			</l:VerticalLayout>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
			</OverflowToolbar>
		</footer>
		<!--<Image src="{ProductPicUrl}" width="15em" densityAware="false"/>-->
	</Popover>
</core:FragmentDefinition>