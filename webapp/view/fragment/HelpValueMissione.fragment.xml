<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
<Dialog
    contentHeight="90%" 
    draggable="false"
    escapeHandler=""
    horizontalScrolling="true"
    icon=""
    resizable="false"
    showHeader="true"
    state="None"
    stretch="false"
    title="Cerca Missioni"
    type="Standard"
    verticalScrolling="true"
>
    <content>
        <List
        mode="MultiSelect"
		items="{
			path: 'modelHome>/formSottostrumento/missione_set'
		}" >
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <SearchField class="sapUiMarginEnd sapUiMarginBegin" search="onSearchHVTitoli" width="65%" />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <infoToolbar>
            <OverflowToolbar visible="{= ${modelHome>/formSottostrumento/missioni}.length > 0}">
                <Text text="{= 'Selezionati: ' + ${modelHome>/formSottostrumento/missioni}.length }" />
            </OverflowToolbar>
        </infoToolbar>
		<StandardListItem
			title="{modelHome>CODICE_MISSIONE}"
			description="{modelHome>DESC_BREVE}"
			iconDensityAware="false"
			iconInset="false" selected="{ parts: [
                            {path:'modelHome>CODICE_MISSIONE'}
                        ], formatter: '.setSelectedMissioni' 
                        }"/>
        <customData>
            <c:CustomData key="selezioni" value="missioni" writeToDom="false" />
        </customData>
	</List>
    </content>
    <customHeader>
    </customHeader>
    <buttons>
        <Button text="Selezionali" press="onConfirmSelectionDomSStr" type="Emphasized"/>
        <Button text="Annulla" press="onCloseHVDomSStr" type="Emphasized"/>
    </buttons>
</Dialog>
</c:FragmentDefinition>