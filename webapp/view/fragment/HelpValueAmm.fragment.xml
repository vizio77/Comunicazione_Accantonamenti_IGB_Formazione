<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
<Dialog
    contentHeight="90%" 
    draggable="false"
    escapeHandler=""
    horizontalScrolling="true"
    icon=""
    resizable="false"
    showHeader="true"
    state="None"
    stretch="false"
    title="Cerca Amministrazione"
    type="Standard"
    verticalScrolling="true"
>
    <content>
        <List
        mode="MultiSelect"
		items="{
			path: 'modelHome>/formSottostrumento/dominio_sstrSet'
		}" >
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <SearchField class="sapUiMarginEnd sapUiMarginBegin" search="onSearchHVAmministrazioni" width="65%" />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <infoToolbar>
            <OverflowToolbar visible="{= ${modelHome>/formSottostrumento/dominio_sstr}.length > 0}">
                <Text text="{= 'Selezionati: ' + ${modelHome>/formSottostrumento/dominio_sstr}.length }" />
            </OverflowToolbar>
        </infoToolbar>
		<StandardListItem
			title="{modelHome>Prctr}"
			description="{modelHome>DescrBreve}"
			iconDensityAware="false"
			iconInset="false" selected="{ parts: [
                    {path:'modelHome>Prctr'}
                ], formatter: '.setSelectedAmm' 
                }"/>
        <customData>
            <c:CustomData key="AZIONE" value="CODICE_AZIONE" writeToDom="false" />
            <c:CustomData key="selezioni" value="dominio_sstr" writeToDom="false" />
        </customData>
	</List>
    </content>
    <customHeader>
    </customHeader>
    <buttons>
        <Button text="Selezionali" press="onConfirmSelectionDomSStr" type="Emphasized"/>
        <Button text="Annulla" press="onCloseHVDomSStr" type="Emphasized"/>
    </buttons>
</Dialog>
</c:FragmentDefinition>