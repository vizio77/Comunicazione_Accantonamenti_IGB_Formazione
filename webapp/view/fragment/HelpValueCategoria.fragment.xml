<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
<Dialog title="Cerca" contentHeight="90%" width="auto">
		<content>
            <Table
                growing="true"
                mode="MultiSelect"
                growingScrollToLoad="true"
                items="{path: 'modelHome>/formSottostrumento/categoria_set/', length: '1000'}"
                sticky="InfoToolbar,HeaderToolbar,ColumnHeaders"
                updateStarted="onUpdateStartedHVDomSStr"
                updateFinished="onUpdateFinishedHVDomSStr"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <SearchField class="sapUiMarginEnd sapUiMarginBegin" search="onSearchHVAzioni" width="50%" />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <infoToolbar>
                    <OverflowToolbar visible="{= ${modelHome>/formSottostrumento/categoria}.length > 0}">
                        <Text text="{= 'Selezionati: ' + ${modelHome>/formSottostrumento/categoria}.length }" />
                    </OverflowToolbar>
                </infoToolbar>
                <columns>
                    <Column width="8rem">
                        <Text text="{i18n>dom_categoria}" />
                    </Column>
                    <Column width="12rem">
                        <Text text="{i18n>descrCategoria}"/>
                    </Column>
                    <Column width="8rem">
                        <Text text="{i18n>dom_titolo}"/>
                    </Column>
                    <Column width="12rem">
                        <Text text="{i18n>descr_titolo}"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Active" selected="{ parts: [
                                                    {path: 'modelHome>CODICE_TITOLO'},
                                                    {path:'modelHome>CODICE_CATEGORIA'}
                                                ], formatter: '.setSelectedCategoria' 
                                                }">
                        <cells>          
                            <Text text="{modelHome>CODICE_CATEGORIA}"/>
                            <Text text="{modelHome>DESCR_ESTESA}"/>
                            <Text text="{modelHome>CODICE_TITOLO}"/>
                            <Text text="{modelHome>DESC_TITOLO}"/>
                        </cells>
                    </ColumnListItem>
                </items>
                <customData>
                    <c:CustomData key="selezioni" value="categoria" writeToDom="false" />
                </customData>
            </Table>
        </content>
        <buttons>
            <Button text="Selezionali" press="onConfirmSelectionDomSStr" type="Emphasized"/>
            <Button text="Annulla" press="onCloseHVDomSStr" type="Emphasized"/>
        </buttons>
    </Dialog>
</c:FragmentDefinition>