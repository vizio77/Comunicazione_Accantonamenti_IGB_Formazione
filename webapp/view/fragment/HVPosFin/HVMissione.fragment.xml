<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
<Dialog
    contentHeight="90%" 
    draggable="false"
    escapeHandler=""
    horizontalScrolling="true"
    icon=""
    resizable="false"
    showHeader="true"
    state="None"
    stretch="false"
    title="Cerca Missioni"
    type="Standard"
    verticalScrolling="true"
>
    <content>
        <List
        mode="SingleSelectLeft"
		items="{
			path: 'modelPosFin>/formPosFin/missioni', sorter: {path:'Missione', comparator: '.sorterHVDomSStr'}
		}" >
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <SearchField class="sapUiMarginEnd sapUiMarginBegin" search="onSearchHVDomSStr" width="65%">
                        <customData>
                            <c:CustomData key="missioni" value="MissioneDescr"/>
                        </customData>
                    </SearchField>
                </content>
            </OverflowToolbar>
        </headerToolbar>
		<StandardListItem
			title="{modelPosFin>Missione}"
			description="{modelPosFin>DescEstesaMissione}"
			iconDensityAware="false"
			iconInset="false" />
        <customData>
            <c:CustomData key="selezioni" value="missioni" writeToDom="false" />
        </customData>
	</List>
    </content>
    <customHeader>
    </customHeader>
    <buttons>
        <Button text="Seleziona" press="onConfirmSelectionPosFin" type="Emphasized">
         <customData>
            <c:CustomData key="selezioni" value="Missione" writeToDom="false" />
        </customData>
        </Button>
        <Button text="Annulla" press="onCloseHVPosFin" type="Emphasized"/>
    </buttons>
</Dialog>
</c:FragmentDefinition>