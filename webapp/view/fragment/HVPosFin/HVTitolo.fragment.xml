<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
<Dialog
    contentHeight="90%" 
    draggable="false"
    escapeHandler=""
    horizontalScrolling="true"
    icon=""
    resizable="false"
    showHeader="true"
    state="None"
    stretch="false"
    title="Cerca Titolo"
    type="Standard"
    verticalScrolling="true"
>
    <content>
        <List
        mode="SingleSelectLeft"
		items="{
			path: 'modelPosFin>/formPosFin/titoli', sorter: [{path: 'Titolo', comparator: '.sorterHVDomSStr'}]
		}" >
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <SearchField class="sapUiMarginEnd sapUiMarginBegin" search=".onSearchHVDomSStr" width="65%">
                        <customData>
                            <c:CustomData key="titoli" value="TitoloDescr"/>
                        </customData>
                    </SearchField>
                </content>
            </OverflowToolbar>
        </headerToolbar>
		<StandardListItem
			title="{modelPosFin>Titolo}"
			description="{modelPosFin>DescEstesaTitolo}"
			iconDensityAware="false"
			iconInset="false"/>
        <customData>
            <c:CustomData key="selezioni" value="titoli" writeToDom="false" />
        </customData>
	</List>
    </content>
    <customHeader>
    </customHeader>
    <buttons>
        <Button text="Seleziona" press="onConfirmSelectionPosFin" type="Emphasized">
            <customData>
                    <c:CustomData key="selezioni" value="Titolo" writeToDom="false" />
            </customData>
        </Button>
        <Button text="Annulla" press="onCloseHVPosFin" type="Emphasized"/>
    </buttons>
</Dialog>
</c:FragmentDefinition>