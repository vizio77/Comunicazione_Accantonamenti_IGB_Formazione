<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
<Dialog title="Cerca" contentHeight="90%" width="auto">
		<content>
            <Table
                growing="true"
                mode="MultiSelect"
                growingScrollToLoad="true"
                items="{path: 'modelHome>/formSottostrumento/azione_set/', length: '1000'}"
                sticky="InfoToolbar,HeaderToolbar,ColumnHeaders"
                updateStarted="onUpdateStartedHVDomSStr"
                updateFinished="onUpdateFinishedHVDomSStr"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <SearchField class="sapUiMarginEnd sapUiMarginBegin" search="onSearchHVAzioni" width="65%" />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <infoToolbar>
                    <OverflowToolbar visible="{= ${modelHome>/formSottostrumento/azioni}.length > 0}">
                        <Text text="{= 'Selezionati: ' + ${modelHome>/formSottostrumento/azioni}.length }" />
                    </OverflowToolbar>
                </infoToolbar>
                <columns>
                    <Column width="4rem">
                        <Text text="Azione" />
                    </Column>
                    <Column width="12rem">
                        <Text text="Descr. Azione"/>
                    </Column>
                    <Column  width="6rem">
                        <Text text="Amm."/>
                    </Column>
                    <Column  width="12rem">
                        <Text text="Descr. Ammin."/>
                    </Column>
                    <Column  width="6rem">
                        <Text text="Missione"/>
                    </Column>
                    <Column width="12rem">
                        <Text text="Desc. Missione"/>
                    </Column>
                    <Column  width="6rem">
                        <Text text="Programma"/>
                    </Column>
                    <Column width="12rem">
                        <Text text="Desc. Programma"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Active" selected="{ parts: [
                                                {path: 'modelHome>CODICE_AZIONE'},
                                                    {path:'modelHome>PRCTR'},
                                                    {path:'modelHome>CODICE_MISSIONE'}, 
                                                {path:'modelHome>CODICE_PROGRAMMA'}
                                                ], formatter: '.setSelectedAzioni' 
                                                }">
                        <cells>          
                            <Text text="{modelHome>CODICE_AZIONE}"/>
                            <Text text="{modelHome>DESC_BREVE}"/>
                            <Text text="{modelHome>PRCTR}"/>
                            <Text text="{modelHome>DESCR_AMMINISTRAZIONE}"/>
                            <Text text="{modelHome>CODICE_MISSIONE}"/>
                            <Text text="{modelHome>DESCR_MISSIONE}"/>
                            <Text text="{modelHome>CODICE_PROGRAMMA}"/>
                            <Text text="{modelHome>DESCR_PROGRAMMA}"/>
                        </cells>
                        <!-- <customData>
                            <c:CustomData key="{homeModel>VALORE}" value="{homeModel>DESCRIZIONE}" writeToDom="false" />
                        </customData> -->
                    </ColumnListItem>
                </items>
                <customData>
                    <c:CustomData key="AZIONE" value="CODICE_AZIONE" writeToDom="false" />
                </customData>
            </Table>
        </content>
        <buttons>
            <Button text="Selezionali" press="onConfirmAzioniDomSStr" type="Emphasized"/>
            <Button text="Annulla" press="onCloseHVDomSStr" type="Emphasized"/>
        </buttons>
    </Dialog>
</c:FragmentDefinition>